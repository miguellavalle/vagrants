# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 79

[*.rst]
indent_size = 4
max_line_length = 79

[*.go]
indent_style = tab
indent_size = 8
tab_width = 8
max_line_length = 100
